doctype html
html
  head
    title Agenda
    link(href="https://cdn.lineicons.com/4.0/lineicons.css", rel="stylesheet")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css", rel="stylesheet")
    link(href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css", rel="stylesheet")
    link(rel="stylesheet" href="css/agenda.css")
    script(src="https://cdn.jsdelivr.net/npm/flatpickr") // Incluyendo Flatpickr
    script(src="/js/frontAgenda.js")
  body
    .container-fluid(style="background-image: url('images/background_modulos.png'); background-size: cover; background-attachment: fixed; min-height: 100vh;")
      .row
        .col-md-1
          include sidebar.pug

        .col-md-9.mx-auto
          h1.text-center Seleccionar una fecha
          // Contenedor del calendario
          div#calendario(style="margin: 0 auto;")

          // Contenedor para mostrar los resultados
          h2.text-center Turnos
          ul.list-group#resultadosContainer(style="margin-top: 20px; width: 100%;")
