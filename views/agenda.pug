doctype html
html
  head
    title Agenda
    link(href="https://cdn.lineicons.com/4.0/lineicons.css", rel="stylesheet")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css", rel="stylesheet")
    link(href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css", rel="stylesheet")
    link(rel="stylesheet" href="css/agenda.css")
    script(src="https://cdn.jsdelivr.net/npm/flatpickr")
    script(src="/js/frontAgenda.js")
  body
    .container-fluid(style="background-image: url('images/background_modulos.png'); background-size: cover; background-attachment: fixed; min-height: 100vh;")
      .row.justify-content-center
        .col-md-1
          include sidebar.pug

        .col-md-9
          h1.text-center Seleccionar una fecha
          div#calendario(style="margin: 0 auto;")
          h2.text-center Turnos
          ul.list-group#resultadosContainer(style="margin-top: 20px;")
            if turnos && turnos.length > 0
              each turno in turnos
                li.list-group-item
                  .d-flex.justify-content-between.align-items-center
                    .flex-grow-1
                      p Turno: #{turno.numero_turno} - Paciente: #{turno.nombre} #{turno.apellido}
                    a.btn-hce.mt-3(href="/hce") Ir a HCE del paciente
            else
              li.list-group-item No hay turnos disponibles
