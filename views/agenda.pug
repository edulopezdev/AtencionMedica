doctype html
html
  head
    title Agenda
    link(href="https://cdn.lineicons.com/4.0/lineicons.css", rel="stylesheet")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css", rel="stylesheet")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css", rel="stylesheet")
    link(rel="stylesheet" href="css/agenda.css")
    script(src="https://cdn.jsdelivr.net/npm/flatpickr")
    script(src="/js/frontAgenda.js")
  body
    .container-fluid(style="background-image: url('images/background_modulos.png'); background-size: cover; background-attachment: fixed; min-height: 100vh; padding-top: 20px;")
      .row.justify-content-center
        .col-md-1
          include sidebar.pug

        .col-md-9
          .bg-light.p-4.rounded(style="margin-bottom: 20px; margin: 0 15px; opacity: 0.85;")
            .d-flex.align-items-center
              h3(style="margin: 0;") Agenda
              .mx-auto
                .d-flex.justify-content-center
                  .d-flex.align-items-center
                    select#dia.form-select(style="width: 100px;")
                      option(value="") Selecciona día
                      each i in Array(31).fill().map((_, index) => index + 1)
                        option(value=i, selected=(i === new Date().getDate())) #{i}
                    select#mes.form-select(style="width: 150px;")
                      option(value="") Selecciona mes
                      option(value="01", selected=(new Date().getMonth() === 0)) Enero
                      option(value="02", selected=(new Date().getMonth() === 1)) Febrero
                      option(value="03", selected=(new Date().getMonth() === 2)) Marzo
                      option(value="04", selected=(new Date().getMonth() === 3)) Abril
                      option(value="05", selected=(new Date().getMonth() === 4)) Mayo
                      option(value="06", selected=(new Date().getMonth() === 5)) Junio
                      option(value="07", selected=(new Date().getMonth() === 6)) Julio
                      option(value="08", selected=(new Date().getMonth() === 7)) Agosto
                      option(value="09", selected=(new Date().getMonth() === 8)) Septiembre
                      option(value="10", selected=(new Date().getMonth() === 9)) Octubre
                      option(value="11", selected=(new Date().getMonth() === 10)) Noviembre
                      option(value="12", selected=(new Date().getMonth() === 11)) Diciembre
                    select#anio.form-select(style="width: 100px;")
                      option(value="") Selecciona año
                      each i in Array(100).fill().map((_, index) => new Date().getFullYear() - index)
                        option(value=i, selected=(i === new Date().getFullYear())) #{i}
                    button#buscarTurnos.btn.btn-primary.btn-buscar(type="button") Buscar

            table.table.table-bordered.table-hover(style="margin-top: 20px; width: 100%;")
              thead.bg-dark
                tr
                  th(style="color: white;") Hora
                  th(style="color: white;") Paciente
                  th(style="color: white;") Motivo
                  th(style="color: white;") Acciones
              tbody#tbodyResultados
                tr
                  td(colspan="4" class="text-center") 
                    i(class="bi bi-arrow-clockwise spinner-border" role="status") 
                      span.visually-hidden Ninguna fecha seleccionada
